                    }
                }, 1500); // å‡è®¾æ¯ä¸ªéŸ³é¢‘å¤§çº¦éœ€è¦1.5ç§’
            } else if (q.audio_path_us) {
                // å¦‚æœæ²¡æœ‰è‹±éŸ³ä½†æœ‰ç¾éŸ³ï¼Œç›´æ¥æ’­æ”¾ç¾éŸ³
                playAudio(q.audio_path_us, q.spelling);
